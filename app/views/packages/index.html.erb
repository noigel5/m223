<h1>Package</h1>

<%= link_to 'New Package', new_package_path %>
<br>
<table>
  <thead>
    <tr>
      <th>sender</th>
      <th>recipient</th>
      <th>content</th>
      <th>weight</th>
      <th>destination</th>
      <th>actions</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= package.sender %></td>
        <td><%= package.recipient %></td>
        <td><%= package.content %></td>
        <td><%= package.weight %></td>
        <td><%= package.destination %></td>
        <td>
          <%= link_to "Edit", edit_package_path(package) %>
        </td>
        <td>
          <%= link_to "Delete", package_path(package), data: { turbo_confirm: "Really delete this user?", turbo_method: :delete} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
